@model WebAppManagerContent.Models.AccountModel

<h1></h1>

<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="Name" class="col-sm-3 control-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Name" class="form-control" value="Usuario prueba" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="SPassword" class="col-sm-3 control-label"></label>
                <div class="col-sm-9">
                    <input asp-for="SPassword" class="form-control" />
                </div>
                <span asp-validation-for="SPassword" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <input type="submit" value="Ingresar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



